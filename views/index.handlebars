<!-- index.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
</head>
<body>
  <h1>{{ subTitle }}</h1>
  <p>{{ additionalInfo }}</p>

  <table border="1">
    <thead>
      <tr>
        <th>No</th>
        <th>Nama</th>
        <th>ID User</th>
        <th>Alamat</th>
        <th>Gender</th>
        <th>Actions</th> <!-- Tambah kolom untuk tombol aksi -->
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.nama}}</td>
          <td>{{this.id_user}}</td>
          <td>{{this.alamat}}</td>
          <td>{{this.gender}}</td>
          <td>
            <button onclick="editUser('{{this.id_user}}')">Edit</button>
            <button onclick="deleteUser('{{this.id_user}}')">Delete</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <button onclick="addUser()">Tambah</button>

  <script>
    // Tambahkan fungsi JavaScript untuk menangani tombol
    function addUser() {
      // Redirect ke halaman create
      window.location.href = '/create';
    }

    function editUser(userId) {
      // Redirect ke halaman edit dengan membawa ID pengguna
      window.location.href = '/edit/' + userId;
    }

    function deleteUser(userId) {
      // Tambahkan logika penghapusan pengguna sesuai kebutuhan
      // Misalnya, bisa menggunakan metode fetch atau AJAX untuk memanggil fungsi delete di server
      console.log('Delete user with ID:', userId);
    }
  </script>
  
</body>
</html>
