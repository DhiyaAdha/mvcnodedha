<!-- create.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
</head>
<body>
  <h1>{{ subTitle }}</h1>
  <p>{{ additionalInfo }}</p>

  <form action="/create" method="POST"> <!-- Point the form action to the create route -->
    <label for="nama">Nama Pengguna:</label>
    <input type="text" id="nama" name="nama" required><br>

    <label for="id_user">ID Pengguna:</label>
    <input type="text" id="id_user" name="id_user" required><br>

    <label for="alamat">Alamat Pengguna:</label>
    <input type="text" id="alamat" name="alamat" required><br>

    <label for="gender">Gender Pengguna:</label>
    <input type="text" id="gender" name="gender" required><br>

    <button type="submit">Submit</button>
  </form>
  
</body>
</html>
